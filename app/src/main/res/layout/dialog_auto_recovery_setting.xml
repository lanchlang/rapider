<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:id="@+id/title"
            android:text="@string/auto_recover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            style="@style/title"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:paddingTop="16dp"
                >
                <com.rapider.views.SelectableTextView
                    android:id="@+id/no_auto_recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:text="@string/no_auto_recovery"
                    style="@style/title"
                    android:textStyle="normal"
                    android:textColor="@color/state_text"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">
                <com.rapider.views.SelectableTextView
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:id="@+id/ask_before_auto_recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    app:text="@string/ask_before_auto_recovery"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:paddingBottom="16dp">
                <com.rapider.views.SelectableTextView
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:id="@+id/auto_recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    app:text="@string/auto_recovery"
                    />
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>