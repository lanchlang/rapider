<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<style name="accentTitle">
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textSize">@dimen/accentTitleTextSize</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="toolbar">
		<item name="android:textColor">@color/textColorTitle</item>
		<item name="android:textSize">@dimen/toolbarTextSize</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="title">
		<item name="android:textColor">@color/textColorTitle</item>
		<item name="android:textSize">@dimen/titleTextSize</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="subTitle">
		<item name="android:textColor">@color/textColorSubTitle</item>
		<item name="android:textSize">@dimen/subTitleTextSize</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="fontSize">
		<item name="android:textColor">@color/textColorTitle</item>
		<item name="android:textSize">@dimen/defaultFontSize</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="customSwitch" parent="Theme.AppCompat.Light">
		<!-- active thumb & track color (30% transparency) -->
		<item name="colorControlActivated">@color/textColorPrimary</item>

		<!-- inactive thumb color -->
		<item name="colorSwitchThumbNormal">#f1f1f1
		</item>

		<!-- inactive track color (30% transparency) -->
		<item name="android:colorForeground">#42221f1f
		</item>
	</style>
</resources>